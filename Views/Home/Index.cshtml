@{
    ViewData["Title"] = "Home Page";
}

<main style="background-color: #FFF8F5; min-height: 100vh; display: flex; flex-direction: column; justify-content: flex-start; align-items: center; text-align: center; padding-top: 10vh;">

    <!-- Headline -->
    <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">Write notes. Share ideas. Appreciate each other.</h1>

    <!-- Description -->
    <p style="font-size: 0.9rem; margin-bottom: 3rem;">
        Notes app is a simple web application for creating, editing and sharing notes with friends. <br>Shared notes can be marked as useful using the "Give a cookie" feature, helping highlight valuable ideas within your network.
    </p>

    <!-- Smaller Headline -->
    <h2 style="font-size: 1.5rem; margin-bottom: 4rem;">If you're new around here - here are some shortcuts to start exploring!</h2>

    <!-- Buttons -->
    <div style="display: flex; gap: 5rem;">
        <a style="padding: 0.75rem 3rem; background-color: #E6D9CB; color: black; text-decoration: none; border-radius: 5px; border: 1px solid black; box-shadow: 0 4px 0 0 rgba(0,0,0,0.2);">Create notes</a>
        <a style="padding: 0.75rem 3rem; background-color: #E6D9CB; color: black; text-decoration: none; border-radius: 5px; border: 1px solid black; box-shadow: 0 4px 0 0 rgba(0,0,0,0.2);">Add friends</a>
    </div>

</main>