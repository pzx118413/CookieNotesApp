@{
    ViewData["Title"] = "Add a friend";
}
<main style="
    background-color: #FFF8F5;
    min-height: 100vh;
    padding: 2rem;
    box-sizing: border-box;
">

    <!-- Back link -->
    <a asp-controller="Friends"
       asp-action="Index"
       style="color: #80695C; font-size: 16px; text-decoration: none;">
        ← Go back to Friends list
    </a>

    <!-- Page title -->
    <h2 style="
        margin-top: 3rem;
        font-size: 28px;
    ">
        Find your friend!
    </h2>

    <!-- Search input -->
    <input type="text"
           placeholder="Type user name ..."
           style="
               margin-top: 1rem;
               width: 520px;
               height: 42px;
               padding: 0 1rem;
               font-size: 16px;
               border-radius: 20px;
               border: 1px solid #B8A39A;
               box-sizing: border-box;
           " />

    <!-- Results label -->
    <p style="
        margin-top: 3rem;
        margin-bottom: 1rem;
        font-size: 16px;
    ">
        Results:
    </p>

