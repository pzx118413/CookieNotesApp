@page
@model CookieNotesApp.Views.Dashboard.IndexModel
@{
}
<main style="
    background-color: #FFF8F5;
    width: 100%;
    min-height: 100vh;
    padding: 5vh 5rem 2rem 5rem;
    box-sizing: border-box;
">

    <!-- Top bar: title + buttons -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h3 style="font-size: 24px;">Notes posted/edited: <span style="color: grey;">date</span></h3>

        <div style="display: flex; flex-direction: column; gap: 2rem;">
            <a href="#" style="padding: 0.5rem 1.5rem; background-color: #E6D9CB; color: black; text-decoration: none; box-shadow: 0 2px 0 rgba(0,0,0,0.2);">Add a friend!</a>
            <a href="#" style="padding: 0.5rem 1.5rem; background-color: #D6C4B0; color: black; text-decoration: none; box-shadow: 0 2px 0 rgba(0,0,0,0.2);">Show friends!</a>
        </div>
    </div>

    <!-- Scrollable notes container -->
    <div style="max-width: 1020px; height: 750px; overflow-y: auto; padding-right: 2rem;">

        <!-- NOTE CARD 1 -->
        <div style="
    background-color: #E6DDD3;
    margin-bottom: 5rem;
    padding: 1.5rem;
    width: 100%;
    height: 328px;
    box-sizing: border-box;
">

            <div style="display: flex; align-items: center; gap: 1.5rem;">

                <img src="/images/noteimageholder.png"
                     alt="Note image"
                     style="width: 404px; height: 255px; object-fit: cover;">

                <div style="text-align: left; color: #80695C; font-size: 24px;">

                    <p>Title: <b>BioNote01</b></p>
                    <p>Author: <b>SoCookedAtSchool01</b></p>

                    <p>Tags:</p>
                    <div style="display: flex; gap: 0.75rem; margin-bottom: 1rem;">
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #biology
                        </span>
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #school
                        </span>
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #GiveMeCookiesPls
                        </span>
                    </div>

                    <div class="cookie-action">
                        <button class="cookie-button">Give a cookie!</button>
                        <span class="cookie-count">🍪: 30</span>
                    </div>

                </div>
            </div>
        </div>

        <!-- NOTE CARD 2 -->
        <div style="
    background-color: #E6DDD3;
    margin-bottom: 5rem;
    padding: 1.5rem;
    width: 100%;
    height: 328px;
    box-sizing: border-box;
">

            <div style="display: flex; align-items: center; gap: 1.5rem;">

                <img src="/images/noteimageholder.png"
                     alt="Note image"
                     style="width: 404px; height: 255px; object-fit: cover;">

                <div style="text-align: left; color: #80695C; font-size: 24px;">

                    <p>Title: <b>StoryIdea</b></p>
                    <p>Author: <b>CreativeCookieBaker</b></p>

                    <p>Tags:</p>
                    <div style="display: flex; gap: 0.75rem; margin-bottom: 1rem;">
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #writing
                        </span>
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #hobby
                        </span>
                        <span style="background-color: #D1B2B2; padding: 0.3rem 0.8rem; font-size: 15px; color: black;">
                            #GiveMeCookiesPls
                        </span>
                    </div>

                    <div class="cookie-action">
                        <button class="cookie-button">Give a cookie!</button>
                        <span class="cookie-count">🍪: 115</span>
                    </div>

                </div>
            </div>
        </div>

    </div>

</main>
