<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookieNotesApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CookieNotesApp.styles.css" asp-append-version="true" />
</head>
<body style="background-color: #FFF8F5;">

    <!-- Top Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">

                <!-- Links -->
                <ul class="navbar-nav flex-grow-1" style="list-style: none; padding-left: 0; margin: 0; display: flex; gap: 2rem;">
    <li class="nav-item">
        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active-link" : "inactive-link")" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Notes" ? "active-link" : "inactive-link")" asp-controller="Notes" asp-action="Index">Notes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Dashboard" ? "active-link" : "inactive-link")" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Account" ? "active-link" : "inactive-link")" asp-controller="Account" asp-action="Profile">Account</a>
    </li>
</ul>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main role="main" style="min-height: calc(100vh - 80px); display: flex; justify-content: flex-start; align-items: center; flex-direction: column; padding-top: 5vh;">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
