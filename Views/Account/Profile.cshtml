@model CookieNotesApp.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<main style="background-color: #FFF8F5; min-height: 100vh; display: flex; justify-content: center; align-items: center; padding: 2rem;">

    <div style="width: 600px; padding: 3rem; background-color: #FFF4EE; text-align: center; box-shadow: 0 4px 0 rgba(0,0,0,0.05);">

        <h2 style="margin-bottom: 2rem; color: #80695C;">MY PROFILE</h2>

        <div style="display: flex; flex-direction: column; align-items: center; gap: 1.5rem; margin-bottom: 3rem;">
            <img src="@Model.ProfileImageUrl" alt="Profile" 
                 style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; border: 4px solid #FFF;">
            
            <div style="text-align: center; color: #5C4A40;">
                <h3 style="margin: 0; font-size: 24px;">@Model.UserName</h3>
                <p style="margin: 0.5rem 0 0 0; color: #998;">@Model.Email</p>
                
                <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 1.5rem;">
                    <div style="background-color: #FFF; padding: 0.5rem 1rem; border-radius: 8px; border: 1px solid #E6DDD3;">
                        <span style="font-weight: bold; font-size: 18px;">@Model.CookiesReceived</span><br>
                        <span style="font-size: 12px; text-transform: uppercase; color: #998;">Cookies</span>
                    </div>
                    <div style="background-color: #FFF; padding: 0.5rem 1rem; border-radius: 8px; border: 1px solid #E6DDD3;">
                        <span style="font-weight: bold; font-size: 18px;">@Model.FriendsCount</span><br>
                        <span style="font-size: 12px; text-transform: uppercase; color: #998;">Friends</span>
                    </div>
                </div>
            </div>
        </div>

        <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
            
            <div style="display: flex; gap: 1rem;">
                <a asp-controller="Account" asp-action="Logout" 
                   style="padding: 0.5rem 2rem; background-color: #E6D9CB; color: black; text-decoration: none; box-shadow: 0 2px 0 rgba(0,0,0,0.2);">
                   Log Out
                </a>
                <a asp-controller="Dashboard" asp-action="Index" 
                   style="padding: 0.5rem 2rem; background-color: #FFF; border: 1px solid #E6D9CB; color: #80695C; text-decoration: none;">
                   Back to Dashboard
                </a>
            </div>

            <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Are you sure? This will delete all your notes, friends, and cookies permanently.');">
                <button type="submit" 
                        style="background: none; border: none; color: #FEA8A7; text-decoration: underline; cursor: pointer; font-size: 14px; margin-top: 1rem;">
                    Delete my account
                </button>
            </form>

        </div>

    </div>

</main>